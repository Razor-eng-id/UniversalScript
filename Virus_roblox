-- [[ DRAG LOGIC (MOBILE & PC) ]] --
local s, p; Main.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then s = i.Position p = Main.Position end end)
game:GetService("UserInputService").InputChanged:Connect(function(i) if (i.UserInputType == Enum.UserInputType.MouseMovement or i.UserInputType == Enum.UserInputType.Touch) and s then
    local d = i.Position - s Main.Position = UDim2.new(p.X.Scale, p.X.Offset + d.X, p.Y.Scale, p.Y.Offset + d.Y)
end end)

-- [[ THE "BREAKER" ENGINE ]] --
local function GlobalInfection()
    -- 1. Mencari Remote Musik Rumah/Mobil Brookhaven
    -- Brookhaven sering menggunakan folder 'Events' atau 'Remotes'
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("RemoteEvent") and (v.Name:lower():find("music") or v.Name:lower():find("sound") or v.Name:lower():find("play")) then
            pcall(function()
                v:FireServer(AUDIO_ID, 10, true) -- Mencoba memaksa lagu virus diputar di rumah/mobil
                print("Injected Audio to: " .. v.Name)
            end)
        end
        -- Menargetkan papan tulis/signage (Visual Replikasi)
        if v:IsA("RemoteEvent") and (v.Name:lower():find("update") or v.Name:lower():find("text")) then
            pcall(function()
                v:FireServer("YOU ARE AN IDIOT", IMAGE_ID)
            end)
        end
    end

    -- 2. Local Chaos (Fallback)
    Lighting.Brightness = 0
    local sky = Instance.new("Sky", Lighting)
    sky.SkyboxBk = IMAGE_ID sky.SkyboxDn = IMAGE_ID sky.SkyboxFt = IMAGE_ID
    sky.SkyboxLf = IMAGE_ID sky.SkyboxRt = IMAGE_ID sky.SkyboxUp = IMAGE_ID

    -- 3. Bouncing Text Spawner
    task.spawn(function()
        while true do
            local l = Instance.new("TextLabel", ScreenGui)
            l.Size = UDim2.new(0, 200, 0, 50)
            l.Position = UDim2.new(math.random(), 0, math.random(), 0)
            l.Text = "YOU ARE AN IDIOT"
            l.BackgroundColor3 = Color3.new(0,0,0)
            l.TextColor3 = Color3.new(1,1,1)
            l.ZIndex = 100
            
            local vx, vy = math.random(5, 15), math.random(5, 15)
            task.spawn(function()
                for i = 1, 500 do
                    l.Position = l.Position + UDim2.new(0, vx, 0, vy)
                    if l.Position.X.Offset > 800 or l.Position.X.Offset < 0 then vx = -vx end
                    if l.Position.Y.Offset > 600 or l.Position.Y.Offset < 0 then vy = -vy end
                    task.wait(0.01)
                end
                l:Destroy()
            end)
            task.wait(2)
        end
    end)
end

ExecuteBtn.MouseButton1Click:Connect(function()
    ExecuteBtn.Text = "CHAOS ACTIVE"
    ExecuteBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
    GlobalInfection()
    
    -- Mencoba menghancurkan physics (Jika Network Ownership mengizinkan)
    for _, p in pairs(workspace:GetDescendants()) do
        if p:IsA("BasePart") and not p.Anchored then
            p.Velocity = Vector3.new(0, 50, 0)
            p.RotVelocity = Vector3.new(50, 50, 50)
        end
    end
end)
